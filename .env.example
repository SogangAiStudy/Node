# Database
# Use local URL for development, Supabase URL for production/remote
DATABASE_URL="postgresql://user:password@localhost:5432/node_db?schema=public"
DIRECT_URL="postgresql://user:password@localhost:5432/node_db?schema=public"

# NextAuth Configuration
# Generate a secret with: openssl rand -base64 32
AUTH_SECRET="your-auth-secret-here"
AUTH_URL="http://localhost:3000"
AUTH_TRUST_HOST=true

# Google OAuth Credentials
# Create these at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Stripe Payment Integration (Required for subscription features)
# Get your API keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Stripe Product Configuration
# 1. Create a product at: https://dashboard.stripe.com/test/products
# 2. Add a RECURRING price (Monthly/Yearly - NOT one-time)
# 3. Copy the Price ID (starts with "price_")
STRIPE_PRICE_ID="price_..."

# Stripe Webhooks (For local development)
# Run: stripe listen --forward-to localhost:3000/api/webhooks/stripe
# Copy the webhook signing secret (starts with "whsec_")
STRIPE_WEBHOOK_SECRET="whsec_..."

# Node environment
NODE_ENV="development"
