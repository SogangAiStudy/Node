# Database
# Use local URL for development, Supabase URL for production/remote
DATABASE_URL="postgresql://user:password@localhost:5432/node_db?schema=public"
DIRECT_URL="postgresql://user:password@localhost:5432/node_db?schema=public"

# NextAuth Configuration
# Generate a secret with: openssl rand -base64 32
AUTH_SECRET="your-auth-secret-here"
AUTH_URL="http://localhost:3000"
AUTH_TRUST_HOST=true

# Google OAuth Credentials
# Create these at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Node environment
NODE_ENV="development"
